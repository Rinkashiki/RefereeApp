<div class="container">
  <br>
  <div class="center handheld_display">
    <% flash.each do |type, msg| %>
      <div id="flash" class="alert alert-warning alert-dismissible d-inline-block" role="alert">
        <%= msg %>
      </div> 
    <% end %>
    <% flash.delete(:alert) %>
    <div hidden id="notification-block" class="center">
      <div id="notification" class="alert alert-warning alert-dismissible d-inline-block" role="alert">
      </div>
    </div>
    <p>Nombre: <%= @clip.clipName %></p>
    <p>Usuario: <%= @clip.uploadUser %></p>
    <% if !@decision.blank? %>
      <p>
        Decisión: <span id="decision" class="bg-light text-dark"><%= @decision.description + " " + @decision.initials %></span>
        <%= link_to 'Editar', edit_decision_path, remote: true, id: "edit-decision", class: "btn btn-primary" %>
      </p>
    <% else %>
      <p>
        Decisión: <span class="bg-light text-dark">Ninguna</span>
        <%= link_to 'Editar', edit_decision_path, remote: true, id: "edit-decision", class: "btn btn-primary" %>
      </p> 
    <% end %>
    <div id="decision-form">
    </div>
    <% if !@sanction.blank? %>
      <p>Sanción:  <span id="sanction" class="bg-light text-dark"><%= @sanction.description + " " + @sanction.initials %></span>
      <%= link_to 'Editar', edit_sanction_path, remote: true, id: "edit-sanction", class: "btn btn-primary" %>
    </p>
    <% else %>
      <p>Sanción:  <span class="bg-light text-dark">Ninguna</span>
      <%= link_to 'Editar', edit_sanction_path, remote: true, id: "edit-sanction", class: "btn btn-primary" %>
    </p> 
    <% end %>
    <div id="sanction-form">
    </div>
    <p><%= video_tag @clip.video.to_s, controls: true, class: "video" %></p>
      <div>
        <h3 class="text-white">Pregunta</h3>
        <% if !@question.nil? %>
          <p class="center topic question bg-secondary rounded">
            <%= @question.question %>
            &emsp;
            <%= link_to '-', quit_question_path, class: 'btn btn-primary' %>
          </p>
          <h3 class="text-white">Respuestas</h3>
          <div hidden id="notification-block" class="center">
            <div id="notification" class="alert alert-warning alert-dismissible d-inline-block" role="alert">
            </div>
          </div>
          <div id="answers">
            <%= render @answers %>
          </div>
          <% if @answers.length() < 10 && @question.question_type != "Pregunta Abierta"%>
            <p id="new-answer" class='m-3'><%= link_to 'Añadir respuesta', new_answer_path(question: @question.id, clip: @clip.id), remote: true, class: 'btn btn-primary' %></p>
          <% end %>
          <div id="answer-form">
          </div>
        <% else %>
          <p><%= link_to 'Añadir', new_question_path(clip: @clip), class: "btn btn-primary" %></p>
        <% end %>
      </div>
    <br>
    <div>
      <br>
      <% if Topic.any? %>
        <h3 class="text-white">Topics</h3>
        <% @topics.each do |t| %>
          <div class="center topic question bg-secondary rounded">
            <%= t['description'] %>
            &emsp;
            <%= link_to '-', quit_topic_path(:topic => t['id']), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <div id="add-topic"> 
          <%= link_to '+', add_topic_path(), remote: true, class: 'btn btn-primary mb-5' %>
        </div>
        <div id="topics">
        </div>
      <% end %>
    </div>
  </div>
</div>